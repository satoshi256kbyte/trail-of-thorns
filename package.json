{
  "name": "phaser3-simulation-rpg",
  "version": "1.0.0",
  "description": "2D Simulation RPG built with Phaser3 and TypeScript",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:md": "markdownlint **/*.md --ignore node_modules",
    "lint:md:fix": "markdownlint **/*.md --ignore node_modules --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "release": "standard-version",
    "validate:data": "ts-node scripts/validate-chapter-stage-data.ts"
  },
  "keywords": [
    "phaser3",
    "typescript",
    "rpg",
    "game",
    "simulation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@fast-check/vitest": "^0.2.4",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "ajv": "^8.17.1",
    "canvas": "^3.1.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fast-check": "^4.5.3",
    "husky": "^8.0.0",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.39.0",
    "phaser3spectorjs": "^0.0.8",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^7.3.0",
    "vite-plugin-checker": "^0.10.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "phaser": "^3.88.2"
  }
}
